@model IEnumerable<R3MUS.Devpack.Recruitment.Models.CharacterContactModel>

<div class="col-md-6">
	<h3 class="option-selector" onclick="slideToggle(this)">Contacts</h3>
	<div style="display:none;">
		<table class="table">
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Character.Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.ContactType)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Standing)
				</th>
				<th></th>
			</tr>

			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Character.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.ContactType)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Standing)
					</td>
				</tr>
			}

		</table>
	</div>
</div>